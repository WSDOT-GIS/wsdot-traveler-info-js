{
  "version": "2.0.0",
  "tasks": [
	{
		"label": "Build",
		"detail": "Builds projects",
		"group": {
			"kind": "build",
			"isDefault": true
		},
		"icon": {
			"id": "tools",
			"color": "terminal.ansiGreen"
		},
		"type": "shell",
		"command": "npm run build -ws --if-present",
		"problemMatcher": [
			"$tsc"
		]
	},
	{
		"label": "Test",
		"type": "shell",
		"command": "npm run test -ws --if-present",
		"group": {
			"kind": "test",
			"isDefault": true
		},
		"icon": {
			"id": "beaker",
			"color": "terminal.ansiCyan"
		},
		"problemMatcher": []
	},
	{
		"label": "Lint",
		"type": "shell",
		"icon": {
			"id": "checklist",
			"color": "terminal.ansiCyan"
		},
		"command": "npm run lint -ws --if-present",
		"problemMatcher": [
			"$eslint-compact",
			"$eslint-stylish"
		]
	},
	{
		"type": "shell",
		"command": "npm run spell -ws --if-present",
		"problemMatcher": [],
		"icon": {
			"id": "checklist",
			"color": "terminal.ansiMagenta"
		},
		"label": "Spellcheck",
		"detail": "Runs spellcheck"
	},
	{
		"type": "npm",
		"script": "lint",
		"problemMatcher": [
			"$markdownlint"
		],
		"label": "npm: lint",
		"detail": "markdownlint-cli2 \"**/*.md\" \"#node_modules\""
	}
]
}
